<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quarta_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_quarta_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.aluno.marketcam.sextaActivity">

            <TextView
                android:text="@string/textCriarListaT6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textCriarListaT6"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textStyle="normal|bold" />

        <TextView
            android:text="AQUI VAI UM LOGO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_below="@+id/textCriarListaT6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="111dp"
            android:layout_marginLeft="111dp" />

        <TextView
                android:text="@string/textNomeListaT6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textNomeListaT6"
                android:layout_marginTop="150dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNomeListaT6"
            android:hint="Informe o Nome da Lista"
            android:layout_alignTop="@+id/textNomeListaT6"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textStyle="normal|italic"
            android:text="@string/editNomeListaT6"
            android:fontFamily="sans-serif-condensed" />

        <Switch
                android:text="@string/switchFavoritoT6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchFavoritoT6"
                android:layout_below="@+id/editNomeListaT6"
                android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp" />

            <Button
                android:text="@string/btnCriarT6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnCriarT6"
                android:layout_below="@+id/switchFavoritoT6"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

    </LinearLayout>
</ScrollView>