<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quarta_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_quarta_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.aluno.marketcam.sextaActivity"
        android:weightSum="1">

            <TextView
                android:text="@string/textCriarListaT6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textCriarListaT6"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textStyle="normal|bold" />

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/criarlista"
            android:id="@+id/imageView4"
            android:layout_marginTop="10dp"
            android:layout_weight="0.18"
            android:layout_height="247dp" />

        <TextView
                android:text="@string/textNomeListaT6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textNomeListaT6"
                android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNomeListaT6"
            android:hint="Informe o Nome da Lista"
            android:layout_alignTop="@+id/textNomeListaT6"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textStyle="normal|italic"
            android:text="@string/editNomeListaT6"
            android:fontFamily="sans-serif-condensed" />

        <Switch
                android:text="@string/switchFavoritoT6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchFavoritoT6"
                android:layout_below="@+id/editNomeListaT6"
                android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp" />

            <Button
                android:text="@string/btnCriarT6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnCriarT6"
                android:layout_below="@+id/switchFavoritoT6"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textStyle="normal|bold"
                android:textColor="#131B2E"
                android:background="@drawable/aparencia_botao_login" />

    </LinearLayout>
</ScrollView>