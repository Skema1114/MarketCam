<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_decima_quarta_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aluno.marketcam.decimaQuartaActivity"
    android:padding="15dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_decima_quarta_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="@string/textMeuCarrinhoT14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textMeuCarrinhoT14"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textStyle="normal|bold" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/activity_decima_quarta_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:text="@string/btnAdicionarT14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnAdicionarT14"
                    android:layout_weight="1"
                    android:background="@drawable/aparencia_botao_login"
                    android:textStyle="normal|bold"
                    android:textColor="#131B2E" />

                <Button
                    android:text="@string/btnRemoverT14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnRemoverT14"
                    android:layout_weight="1"
                    android:background="@drawable/aparencia_botao_login"
                    android:layout_marginLeft="5dp"
                    android:textStyle="normal|bold"
                    android:textColor="#131B2E" />
                </LinearLayout>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="310dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/listCarrinhoT14" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/activity_decima_quarta_linear_layout_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:text="@string/textValorTotalT14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textValorTotalT14"
                        android:layout_weight="0.21"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="169dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textRecebeValorTotalT14"
                        android:text="@string/textRecebeValorTotalT14" />
                </LinearLayout>

        <Button
            android:text="@string/btnFinalizarPedidoT14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnFinalizarPedidoT14"
            android:layout_weight="1"
            android:background="@drawable/aparencia_botao_login"
            android:textStyle="normal|bold"
            android:textColor="#131B2E"
            android:layout_marginBottom="5dp" />

    </LinearLayout>
</ScrollView>
