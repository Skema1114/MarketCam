<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_primeira_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_primeira_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.aluno.marketcam.primeiraActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="286dp"
            app:srcCompat="@drawable/marketlogo"
            android:id="@+id/imageLogoT1" />

        <Button
                android:text="@string/btnNCadastroT1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnNCadastroT1"
                android:background="@drawable/aparencia_botao_login"
                android:layout_marginTop="70dp"
                android:layout_alignTop="@+id/btnJCadastroT1"
                android:layout_alignParentStart="true"
            android:textStyle="normal|bold"
            android:textColor="#131B2E" />

        <Button
            android:text="@string/btnJCadastroT1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/aparencia_botao_login"
            android:id="@+id/btnJCadastroT1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="#131B2E" />
    </LinearLayout>
</ScrollView>
