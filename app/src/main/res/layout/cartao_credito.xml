<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_XML_cartao_creditos_linear">

    <TextView
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:id="@+id/textListarCartao_CreditosEsquerda"
        android:text="@string/textListarCartao_CreditosEsquerda"
        android:textAlignment="viewEnd"
        android:textStyle="normal|bold" />

    <TextView
        android:text="@string/textListarCartao_CreditosDireita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textListarCartao_CreditosDireita"
        android:layout_weight="1"
        android:textAlignment="viewStart" />
</LinearLayout>
