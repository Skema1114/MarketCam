<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_decima_segunda_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aluno.marketcam.decimaSegundaActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_decima_segunda_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_decima_segunda_horizontal_scroll">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/activity_decima_segunda_linear_linear">

                <Button
                    android:text="@string/btnUsuariosT12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnUsuariosT12"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/aparencia_botao_login"
                    android:textColor="#131B2E" />

                <Button
                    android:text="@string/btnProdutosT12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnProdutosT12"
                    android:layout_weight="1"
                    android:background="@drawable/aparencia_botao_login"
                    android:textColor="#131B2E" />

                <Button
                    android:text="@string/btnEnderecosT12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btnEnderecosT12"
                    android:background="@drawable/aparencia_botao_login"
                    android:textColor="#131B2E" />

                <Button
                    android:text="@string/btnComprasT12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnComprasT12"
                    android:layout_weight="1"
                    android:background="@drawable/aparencia_botao_login"
                    android:textColor="#131B2E" />

                <Button
                    android:text="@string/btnListasComprasT12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnListasComprasT12"
                    android:layout_weight="1"
                    android:background="@drawable/aparencia_botao_login"
                    android:textColor="#131B2E" />

                <Button
                    android:text="@string/btnCartõesCreditoT12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnCartõesCreditoT12"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/aparencia_botao_todos"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </HorizontalScrollView>

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbarT12" />

        <TextView
            android:text="@string/textCartoesCreditoT12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textCartoesCreditoT12"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="normal|bold"
            android:layout_marginTop="5dp"
            android:textAlignment="center" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="392dp"
            android:layout_marginTop="15dp"
            android:id="@+id/listCartoesCreditoT12" />
    </LinearLayout>
</ScrollView>

