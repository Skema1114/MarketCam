<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_decima_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aluno.marketcam.decimaActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_decima_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_decima_horizontal_scroll">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/activity_decima_linear_linear"
                android:layout_marginTop="5dp">

                <Button
                    android:text="@string/btnUsuariosT10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnUsuariosT10"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/aparencia_botao_login"
                    android:textColor="#131B2E"
                    android:layout_marginRight="3dp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="@string/btnProdutosT10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnProdutosT10"
                    android:layout_weight="1"
                    android:background="@drawable/aparencia_botao_login"
                    android:textColor="#131B2E"
                    android:layout_marginRight="3dp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="@string/btnEnderecosT10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btnEnderecosT10"
                    android:background="@drawable/aparencia_botao_login"
                    android:textColor="#131B2E"
                    android:layout_marginRight="3dp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="@string/btnComprasT10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnComprasT10"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/aparencia_botao_todos"
                    android:textColor="#ffffff"
                    android:layout_marginRight="3dp" />

                <Button
                    android:text="@string/btnListasComprasT10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnListasComprasT10"
                    android:layout_weight="1"
                    android:background="@drawable/aparencia_botao_login"
                    android:textColor="#131B2E"
                    android:layout_marginRight="3dp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="@string/btnCartõesCreditoT10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnCartõesCreditoT10"
                    android:layout_weight="1"
                    android:background="@drawable/aparencia_botao_login"
                    android:textColor="#131B2E"
                    android:textStyle="normal|bold" />
            </LinearLayout>
        </HorizontalScrollView>

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbarT10" />

        <TextView
            android:text="@string/textComprasT10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textComprasT10"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="normal|bold"
            android:layout_marginTop="5dp"
            android:textAlignment="center" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="392dp"
            android:layout_marginTop="15dp"
            android:id="@+id/listComprasT10" />
    </LinearLayout>
</ScrollView>

