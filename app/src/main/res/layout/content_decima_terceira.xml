<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_decima_terceira"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.aluno.marketcam.decimaTerceiraActivity"
    tools:showIn="@layout/app_bar_decima_terceira">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageLogoT13"
        android:minHeight="350dp"
        android:minWidth="350dp"
        android:maxWidth="350dp"
        android:maxHeight="350dp"
        android:nestedScrollingEnabled="true"
        app:srcCompat="@drawable/codigo_barras"
        android:layout_height="247dp"
        android:layout_marginTop="20dp" />

    <Button
        android:text="@string/btnLimparT13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLimparT13"
        android:visibility="visible"
        android:background="@drawable/aparencia_botao_login"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textStyle="normal|bold"
        android:textColor="#131B2E" />

    <Button
        android:text="@string/btnCapturaCodigoT13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCapturaCodigoT13"
        android:background="@drawable/aparencia_botao_login"
        android:textColor="#131B2E"
        android:textStyle="normal|bold"
        android:layout_above="@+id/btnLimparT13"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
    <!-- LINHA DE CODIGO QUE FAZ O IMAGE VIEW CHAMAR A CAMERA QUANDO CLICADO -->
    <!-- android:onClick="dispatchTakePictureIntent" -->
</RelativeLayout>
